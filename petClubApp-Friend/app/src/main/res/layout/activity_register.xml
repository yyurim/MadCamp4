<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_register"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingLeft="@dimen/activity_vertical_margin"
    android:background="@color/colorAccent"
    android:orientation="vertical"
    tools:context=".login.RegisterActivity"
    android:theme="@style/AppTheme">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity ="center"
        android:fillViewport="true"
        android:layout_marginTop="0dp"
        android:id="@+id/scrollView">
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="40dp"
                android:textStyle="bold"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:layout_gravity="center"
                android:typeface="monospace"
                android:fontFamily="@font/delius_unicase"
                android:textColor="@color/colorPrimaryDark"
                android:text="REGISTRATION"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Required Information "
                android:layout_marginBottom="5dp"
                android:textSize="18dp"
                android:fontFamily="@font/delius_unicase"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:id="@+id/userID"
                        android:fontFamily="@font/snowburst_one"
                        android:text="ID"
                        android:textColor="#808080" />
                    <com.rengwuxian.materialedittext.MaterialEditText
                        android:id="@+id/edt_id"
                        android:inputType="text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:drawableRight="@drawable/ic_user"
                        />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:fontFamily="@font/snowburst_one"
                        android:layout_alignParentTop="true"
                        android:id="@+id/userPassword"
                        android:text="Password"
                        android:textColor="#808080" />
                    <com.rengwuxian.materialedittext.MaterialEditText
                        android:id="@+id/edt_password"
                        android:inputType="textPassword"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:drawableRight="@drawable/ic_lock"
                        />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:fontFamily="@font/snowburst_one"
                        android:id="@+id/userPasswordConfirm"
                        android:text="Password Confirmation"
                        android:textColor="#808080" />
                    <com.rengwuxian.materialedittext.MaterialEditText
                        android:id="@+id/edt_password_confirm"
                        android:inputType="textPassword"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:drawableRight="@drawable/ic_lock"
                        />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:fontFamily="@font/snowburst_one"
                        android:layout_alignParentTop="true"
                        android:id="@+id/userPhone"
                        android:text="Phone"
                        android:textColor="#808080" />
                    <com.rengwuxian.materialedittext.MaterialEditText
                        android:id="@+id/edt_phone"
                        android:inputType="text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:drawableRight="@mipmap/ic_phone"
                        />
                </RelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Optional Information "
                    android:textSize="18dp"
                    android:fontFamily="@font/delius_unicase"
                    android:layout_marginBottom="5dp"
                    android:textStyle="bold"
                    android:paddingTop="24dp"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:fontFamily="@font/snowburst_one"
                        android:layout_alignParentTop="true"
                        android:id="@+id/userName"
                        android:text="Name"
                        android:textColor="#808080" />
                    <com.rengwuxian.materialedittext.MaterialEditText
                        android:id="@+id/edt_name"
                        android:inputType="text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:drawableRight="@drawable/ic_user"
                        />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:id="@+id/userEmail"
                        android:text="Email"
                        android:fontFamily="@font/snowburst_one"
                        android:textColor="#808080" />
                    <com.rengwuxian.materialedittext.MaterialEditText
                        android:id="@+id/edt_email"
                        android:inputType="text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:drawableRight="@drawable/ic_email"
                        />
                </RelativeLayout>



                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:id="@+id/submit"
                    android:fontFamily="@font/delius_unicase"
                    android:textStyle="bold"
                    android:text="Register"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>